{
  "configurations": [
    {
      "name": "Flask: Run",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": { "FLASK_APP": "app.py", "FLASK_DEBUG": "1" },
      "args": ["run"],
      "jinja": true,
      "autoStartBrowser": false
    },
    {
      "name": "TypeScript: Compile",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "program": "${workspaceFolder}/frontend/**/*.js",
      "outFiles": ["${workspaceFolder}/frontend/**/*.js"]
    }
  ]
}
